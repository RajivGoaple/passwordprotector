<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" android:layout_marginTop="15dp" android:src="@drawable/password_icon" />
        <TextView
            android:layout_width="wrap_content" android:textSize="20dp" android:layout_marginTop="20dp"
            android:layout_height="wrap_content" android:text="Add Password" />
    </LinearLayout>

    <EditText
        android:id="@+id/description"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:singleLine="true"
        android:layout_marginBottom="4dp"
        android:hint="Description" />
    <EditText
        android:id="@+id/username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:visibility="gone"
        android:hint="Username"/>
    <EditText
        android:id="@+id/password"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Password/Pin"/>
    <CheckBox
        android:layout_width="wrap_content" android:text="Include Username"
        android:layout_height="wrap_content" android:id="@+id/addUsername" />
</LinearLayout>